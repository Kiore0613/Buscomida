<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Preferencias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="227dp"
            android:layout_height="72dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:text="Selecciona tus Categorias Favoritas"
            android:textSize="24sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <RadioButton
                android:id="@+id/idComidaTipica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comida Tipica" />

            <RadioButton
                android:id="@+id/idComidaRapida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comida Rapida" />

            <RadioButton
                android:id="@+id/idRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurante" />

            <RadioButton
                android:id="@+id/idTortas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tortas" />
        </RadioGroup>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Enviar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>